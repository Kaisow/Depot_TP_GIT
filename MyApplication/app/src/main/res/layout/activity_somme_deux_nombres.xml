<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/ed_nombre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Nombre 1"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ed_nombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ed_nombre1"
        android:layout_below="@+id/ed_nombre1"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Nombre 2"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="sum"
        android:text="Additionner" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_sum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />
</RelativeLayout>
